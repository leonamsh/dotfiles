general.live_config_reload = true

[colors.bright]
black = "#50545B"
blue = "#6CB8F9"
cyan = "#5FC0CC"
green = "#A2CD83"
magenta = "#D282E7"
red = "#EA757E"
white = "#B5BCC9"
yellow = "#EFCA84"

[colors.normal]
black = "#32363D"
blue = "#62AEEF"
cyan = "#55B6C2"
green = "#98C379"
magenta = "#C778DD"
red = "#E06B74"
white = "#ABB2BF"
yellow = "#E5C07A"

[colors.primary]
background = "#1E2128"
foreground = "#ABB2BF"

[font]
size = 11

[font.bold]
family = "SauceCodePro Nerd Font Mono"

[font.bold_italic]
family = "SauceCodePro Nerd Font Mono"

[font.italic]
family = "SauceCodePro Nerd Font Mono"

[font.normal]
family = "SauceCodePro Nerd Font Mono"

[cursor]
unfocused_hollow = false

[cursor.style]
blinking = "On"
shape = "Block"

[env]
TERM = "alacritty"
WINIT_X11_SCALE_FACTOR = "1.0"

[window]
decorations = "full"
dynamic_title = true
opacity = 1
startup_mode = "Windowed"

[window.dimensions]
columns = 82
lines = 24

[window.padding]
x = 30
y = 30
