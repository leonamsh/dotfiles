* {
  border: none;
  border-radius: 0;
  font-family:
    "Fira Sans Semibold", "Font Awesome 6 Free", FontAwesome, Roboto, Helvetica,
    Arial, sans-serif;
  font-size: 14px;
  font-weight: bold;
  min-height: 0;
  box-shadow: none;
  color: white;
  transition-duration: 0s;
  margin: 1px;
  padding: 1px;
  border-radius: 12px;
}

window#waybar {
  background-color: #313141;
  /* background: transparent; */
  /* background-image: linear-gradient(to top bottom, red 0%, blue 100%); */
  color: white;
  /* text-shadow: */
  /*   1px 1px 0 #000, */
  /*   -0.25px 0.25px 0 #000, */
  /*   -0.25px -0.25px 0 #000, */
  /*   0.25px -0.25px 0 #000; */
}

#window {
  font-weight: bold;
}

#workspaces button {
  padding: 0 5px;
  background: transparent;
  /* background-color: #111827; */
  color: white;
  border-top: 2px solid transparent;
}

#workspaces button.hover {
  box-shadow: inherit;
  background-color: #111827;
}

#workspaces button.active {
  background: #bae1ff;
  color: #282a36;
  border-top: 2px solid #88c0d0;
}

#workspaces button.urgent {
  background: #ffb3ba;
  color: white;
  animation-name: blink;
  animation-duration: 0.5s;
  animation-timing-function: steps(12);
  animation-iteration-count: infinite;
  animation-direction: alternate;
}
#mode {
  background: #64727d;
  border-bottom: 3px solid white;
  background-color: #111827;
}

#clock,
#cpu,
#memory,
#pulseaudio,
#wireplumber,
#custom-storage,
#custom-power,
#custom-rofi,
#window,
#custom-spotify,
#tray {
  padding: 0 3px;
  /* margin: 4 2px; */
  background-color: #111827;
}

