{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------
    "layer": "top",
    "position": "top",
    "height": 20,
//    "margin-left": 10,
    "margin-bottom": 3,
 //   "margin-right": 10,
    "spacing": 5,

    "modules-left": [
        "custom/rofi",
        "sway/workspaces",
        "custom/sp1",
        // "temperature",
        "custom/spotify",
        "sway/window"
    ],
    "modules-center": [
        "clock#3",
        "custom/sp1",
        "clock#2",
        ],
    "modules-right": [
        "custom/storage",
        "custom/sp1",
        "memory",
        "custom/sp1",
        "cpu",
        "custom/sp1",
        "wireplumber",
        "custom/sp1",
        "custom/screenshot_t",
        "custom/sp1",
        "tray",
        "custom/sp1",
        "custom/power"
    ],

    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------
    "custom/sp1": {
        "format": " | ",
        "tooltip": false
    },
    "custom/sp2": {
        "format": " |",
        "tooltip": false
    },

    "custom/rofi": {
        "format": "   ÔÉâ",
        "tooltip": false,
        "on-click-right": "nwg-drawer",
        "on-click": "rofi -show drun",
        "on-click-middle": "pkill -9 rofi"
    },

    "custom/screenshot_t":{
        "format":"ÔÄ∞ ",
        "on-click": "~/.config/sway/scripts/screenshot_full",
        "on-click-right":"~/.config/sway/scripts/screenshot_area"
    },

    "clock#1": {
        "format": "ÔÅ≥ {:%a}",
        "tooltip": false,
        "on-click": "gsimplecal"
    },
    "clock#2": {
        "format": "Ôâ¥ {:%d-%h-%Y}",
        "tooltip": false,
        "on-click": "gsimplecal"
    },
    "clock#3": {
        "format": "ÔÄó {:%H:%M:%S %p}",
        "tooltip": false,
        "on-click": "gsimplecal"
    },

    "temperature": {
        "interval": 4,
        "critical-threshold": 80,
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon}  {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "max-length": 7,
        "min-length": 7,
        "on-click": "xsensors"
    },

    "memory": {
        "interval": 30,
        "format": "Ôãõ  {used:0.2f} / {total:0.0f} GB",
        "on-click": "alacritty -e btop"
    },

    "battery": {
        "interval": 2,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ÔñÉ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "network": {
        "format-wifi": "Ôá´ {essid} ({signalStrength}%)",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format": "ÔÄí",
        "format-disconnected": "Ôöî",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "wl-copy $(ip address show up scope global | grep inet | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c5-)",
        "on-click-right": "wl-copy $(ip address show up scope global | grep inet6 | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c6-)",
        "tooltip-format": "ÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}\n{ifname}\n{ipaddr}/{cidr}\n",
        "tooltip-format-wifi": "Ôá´ {essid} {frequency}MHz\nStrength: {signaldBm}dBm ({signalStrength}%)\nIP: {ipaddr}/{cidr}\nÔÇì {bandwidthUpBits} ÔÄô {bandwidthDownBits}",
        "interval": 10
    },
    "custom/storage": {
        "format": "ÔÇ† {}",
        "format-alt": "{percentage}% ÔÇ†",
        "format-alt-click": "click-right",
        "return-type": "json",
        "interval": 60,
        "exec": "~/.config/waybar/modules/storage.sh"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-alt": "{percent}% {icon}",
        "format-alt-click": "click-right",
        "format-icons": ["ÔÜÖ", "ÔÑë"],
        "on-scroll-down": "brightnessctl s 5%-",
        "on-scroll-up": "brightnessctl s +5%"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "tooltip": "true"
    },

    "custom/weather": {
        "format": "{}",
        "format-alt": "{alt}: {}",
        "format-alt-click": "click-right",
        "interval": 3600,
        "exec": "curl -s 'https://wttr.in/?format=1'",
        "exec-if": "ping wttr.in -c1"
    },
    
    "custom/pacman": {
        "format": "<big>ÙèÜ≤</big>  {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "alacritty -e 'paru'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "max-length": 5,
        "min-length": 3
    },

    "custom/spotify": {
        "exec": "~/.config/waybar/mediaplayer.py --player spotify",
        "format": "{}  ÔÜº",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },

    "custom/media": {
        "format": "{0} {1}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true
    },

    "custom/power": {
        "format": " Û∞ê•   ",
        "tooltip": false,
        "on-click": "wlogout"
    },

    "clock": {
        "format": "ÔÄó  {:%H:%M  ÔÅ≥ %e %b}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>"
    },

    "clock#date": {
        "format": "Û∞•î  {:%H:%M \nÔÅ≥ %e %b}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>"
    },

    "custom/gammastep": {
      "interval": 5,
      "return-type": "json",
      "exec": {
        "pre": "if unit_status=\"$(systemctl --user is-active gammastep)\"; then\nstatus=\"$unit_status ($(journalctl --user -u gammastep.service -g 'Period: ' | tail -1 | cut -d ':' -f6 | xargs))\"\nelse\nstatus=\"$unit_status\"\nfi",
        "alt": "${status:-inactive}",
        "tooltip": "Gammastep is $status",
      },
      "format": "{icon}",
      "format-icons": {
        "activating": "Û∞Å™ ",
        "deactivating": "Û∞Å™ ",
        "inactive": "? ",
        "active (Night)": "ÔÜÜ ",
        "active (Nighttime)": "ÔÜÜ ",
        "active (Transition (Night)": "ÔÜÜ ",
        "active (Transition (Nighttime)": "ÔÜÜ ",
        "active (Day)": "Óåç ",
        "active (Daytime)": "Óåç ",
        "active (Transition (Day)": "Óåç ",
        "active (Transition (Daytime)": "Óåç ",
      },
      "on-click": "systemctl --user is-active gammastep && systemctl --user stop gammastep || systemctl --user start gammastep"
    },

    "cpu": {
        "interval": 1,
        "format": "{max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
        "max-length": 13,
        "min-length": 13
    },

    "mpd": {
        "max-length": 25,
        "format": "<span foreground='#bb9af7'>ÔÄÅ</span> {title}",
        "format-paused": "ÔÄÅ {title}",
        "format-stopped": "<span foreground='#bb9af7'>ÔÄÅ</span>",
        "format-disconnected": "",
        "on-click": "mpc --quiet toggle",
        "on-click-right": "mpc update; mpc ls | mpc add",
        "on-click-middle": "alacritty -e ncmpcpp",
        "on-scroll-up": "mpc --quiet prev",
        "on-scroll-down": "mpc --quiet next",
        "smooth-scrolling-threshold": 5,
        "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})"
    },

    "custom/title": {
        "format": "{}",
        "interval": 0,
        "return-type": "json",
        "tooltip": false
    },

    "custom/title#name": {
        "format": "{}",
        "interval": 0,
        "return-type": "json",
        "max-length": 35,
        "exec": "$HOME/.scripts/title"
    },

"sway/workspaces": {
    "all-outputs": true,
    "format": "{name}",
    "on-scroll-up": "swaymsg workspace next",
    "on-scroll-down": "swaymsg workspace prev",
    "sort-by-number": true,
    "active-only": false,
    "persistent-workspaces": {
               "1:I": [],
               "2:II": [],
               "3:III": [],
               "4:IV": [],
               "5:V": [],
               "6:VI": []
               }
},

    "sway/window": {
        "max-length": 100,
        "separate-outputs": true
    },

    "pulseaudio": {
        "scroll-step": 3,
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "amixer sset Master toggle"
    },

    "wireplumber": {
        "on-click": "pavucontrol",
        "on-click-right": "amixer sset Master toggle 1>/dev/null",
        "format": "<span foreground='#fab387'>{icon}</span>  {volume}%",
        "format-muted": "Ôö© ",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôñê ",
            "headset": "Ôñê ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        }
    },

    "tray": {
        "icon-size": 15,
        "spacing": 5
    }
}
