{
  "layer": "top",
  "position": "top",
  "height": 50,
  "margin": "8 8 0 8",

  "modules-left": ["sway/workspaces"],
  "modules-center": ["clock"],
  "modules-right": ["battery", "network", "pulseaudio", "custom/power"],

  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": false,

    // Mostra só o ícone
    "format": "{icon}",

    // Ícone por workspace (1..6). Ajuste à sua numeração.
    "format-icons": {
      "1": "",  // Git / Dev
      "2": "",  // Spotify
      "3": "",  // Terminal
      "4": "",  // Files
      "5": "󰖟",  // Navegador
      "6": "󰇨"   // Chat/IM
    },

    // Mantém os workspaces sempre visíveis mesmo vazios (opcional)
    "persistent_workspaces": {
      "1": ["*"], "2": ["*"], "3": ["*"],
      "4": ["*"], "5": ["*"], "6": ["*"]
    }
  },

  "clock": {
    "format": "{:%H:%M}",
    "tooltip-format": "{:%A, %d %B %Y}"
  },

  "battery": {
    "format": "{icon}",
    "format-icons": ["","","","",""],
    "tooltip-format": "{capacity}%"
  },

  "network": {
    "format-wifi": "",
    "format-ethernet": "",
    "format-disconnected": "󰤮",
    "tooltip": true
  },

  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "",
    "format-icons": { "default": ["","",""] },
    "on-click": "pavucontrol",
    "tooltip": true
  },

  "custom/power": {
    "exec": "echo ",
    "on-click": "~/.config/waybar/scripts/toggle-power.sh",
    "tooltip": "Power",
    "interval": 0
  }
}

