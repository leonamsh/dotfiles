#!/usr/bin/env bash
# Mostra a faixa atual via playerctl; cai em MPD se necessário
if playerctl -p spotify metadata &>/dev/null; then
  ARTIST=$(playerctl -p spotify metadata artist 2>/dev/null)
  TITLE=$(playerctl -p spotify metadata title 2>/dev/null)
  STATUS=$(playerctl -p spotify status 2>/dev/null)
  ICON="阮" # fallback
  [ "$STATUS" = "Playing" ] && ICON="" || ICON=""
  [ -n "$TITLE" ] && echo "$ICON $ARTIST - $TITLE" || echo ""
else
  # MPD como fallback
  mpc current -f " %artist% - %title%" 2>/dev/null | head -n1
fi
